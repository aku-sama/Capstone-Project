<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/gray_b2abab</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LogoText" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputStyle" parent="Widget.Design.TextInputLayout">
        <item name="passwordToggleTint">@color/colorAccent</item>
        <item name="errorTextAppearance">@style/ErrorEditStyle</item>
        <item name="android:textColorHint">@color/gray_b2abab</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <style name="ErrorEditStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="ButtonGreen" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="ButtonPin" parent="Base.TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:layout_width">@dimen/button_pin_size</item>
        <item name="android:layout_height">@dimen/button_pin_size</item>
        <item name="android:background">@drawable/button_pin</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">@dimen/gap_16</item>
        <item name="android:layout_marginLeft">@dimen/gap_12</item>
        <item name="android:layout_marginRight">@dimen/gap_12</item>
    </style>

    <style name="HeaderText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SubheaderText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources>
